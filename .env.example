# AdEzy Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================================
# Database Configuration (Supabase)
# ====================================
USE_SUPABASE=True
SUPABASE_DB_HOST=your-supabase-host.pooler.supabase.com
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres.your-project-id
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_DB_PORT=5432

# ====================================
# AI API Configuration (OpenRouter)
# ====================================
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# ====================================
# Django Settings
# ====================================
# SECURITY WARNING: Generate a strong random secret key!
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-secret-key-here-make-it-long-and-random

# Set to True for development, False for production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# ====================================
# Notes
# ====================================
# - Never commit the .env file to Git
# - Keep all credentials private
# - For local development, DEBUG=True is fine
# - For production, set DEBUG=False and use proper ALLOWED_HOSTS
